@import '../../../node_modules/argob-poncho/dist/css/poncho.css'
@import './forum-container/styles.styl'
@import './search/styles.styl'
@import './search/results-search/styles.styl'

.jumbotron_body
  padding: 50px 0 !important
  .container
    img
      padding: 20px;
      background: #fff;
      width: 300px;
      border: 5px solid #fdd304;
      margin: 0 0 40px;

    .lead
      font-size:18px
      margin-top: 5px
      &.highlight
        font-size:22px
        font-weight: 400
        text-shadow: none !important
      span
        color:#4eafe6
    .participar
      border-radius: 40px;
      margin-top: 1rem
      margin: 10px;
      background-color: #ee0078;
.ext-site-home-multiforum
  background: transparent

  .forums-list
    display: flex
    flex-direction: column
    flex-wrap: wrap
    padding-top: 1em

    .forums-list-title
      font-size: 35px
      text-align: center
      font-weight: 500
      margin-bottom: 20px

    .forums-list-item
      max-width: 100%
      width: 100%
      margin: 0 10px 20px

      @media (min-width: 992px)
        width: 440px

  .cover
    text-align: center

    h1
      max-width: 500px
      margin: 0 auto .3em

  .fa-group
  .fa-newspaper-o
  .fa-bullhorn
  .arrow-down
    background-size: cover
    background-repeat: no-repeat
    display: inline-block
    margin-top: 0
    margin-right: 3%
    width: 70px
    height: 55px
    margin-bottom:20px
    @media screen and (max-width: 750px)
      width: 40px
      height: 30px
      margin-top:25px

  .lead-paragraph
    margin-top: 1.5em
    text-align: center
    font-size: 20px
    padding-left: 5%;
    padding-right: 5%;
    &.last
      color: #4eafe6
      font-weight:bold
      flex-direction:column
      justify-content:center

    .bold {
      font-weight: 400
    }

    .skyblue {
      font-weight: 400;
    }
  .arrow
    text-align:center



  .section-icons
    display: flex;
    justify-content: space-evenly;
    .icon
      width:100px

  .fa-group
    background-image: url("ext/lib/site/home-multiforum/users.svg")

  .fa-newspaper-o
    background-image: url("ext/lib/site/home-multiforum/newspaper.svg")

  .fa-bullhorn
    background-image: url("ext/lib/site/home-multiforum/bullhorn.svg")

  .icon-arrow-down
    font-size: 20px
    color: #4eafe6
    cursor: pointer

  .content-center
    display: flex;
    align-self: center;
    margin: 20px

    .btn
    .dropdown-element
    .dropbtn
      min-width:130px
      padding: 5px 25px 5px 25px !important

    .btn-secondary
      background-color: transparent;
      border: none;
      box-shadow: none;

    .btn-active
      text-underline: none
      background-color: #e9e9e9
      color: #444;
      &:focus
        outline: none

.dropbtn
  width:150px
  font-size:16px !important
  @media (min-width: 701px)
    display:none

.dropdown-element:hover .dropdown-content
  @media (max-width: 700px)
    display: block

.dropdown-content
  @media (max-width: 700px)
    li
      display:block
      margin-bottom:0

.dropdown-content
  @media (max-width: 700px)
    display: none
    position: absolute
    z-index: 1
    left: -14px
    top: 36px

.dropdown-element
  @media (max-width: 700px)
    position: relative
    display: inline-block

.small-arrow
  font-size:9px !important

.show-more
  height: 50px



